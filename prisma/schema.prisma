// Time and Attendance
model TimeRecord {
  id         String    @id @default(cuid())
  employeeId String
  date       DateTime  @db.Date
  clockIn    DateTime?
  clockOut   DateTime?
  breakStart DateTime?
  breakEnd   DateTime?
