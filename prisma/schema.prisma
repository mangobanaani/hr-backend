// Expenses and Reimbursements
model ExpenseCategory {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  maxAmount   Decimal? @db.Decimal(10, 2)
  currency    String   @default("USD")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

