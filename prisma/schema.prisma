  @@map("time_records")
}

model LeaveType {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  isPaid      Boolean  @default(true)
  maxDays     Int?     // Maximum days per year
  carryOver   Boolean  @default(false)
