# HR System Backend Configuration
# Copy this file to .env and update the values

# ================================
# Database Configuration
# ================================
DATABASE_URL="postgresql://username:password@localhost:5432/hr_system?schema=public"
DB_HOST="localhost"
DB_PORT=5432
DB_USERNAME="postgres"
DB_PASSWORD="your-secure-database-password"
DB_DATABASE="hr_system"
DB_SSL=false
DB_LOGGING=false
DB_SYNCHRONIZE=false
DB_MIGRATIONS_RUN=true

# ================================
# JWT & Authentication
# ================================
JWT_SECRET="your-super-secure-jwt-secret-minimum-64-characters-long-change-this"
JWT_REFRESH_SECRET="your-refresh-token-secret-minimum-64-characters-different-from-jwt-secret"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"
JWT_ISSUER="hr-system"
JWT_AUDIENCE="hr-system-users"

# ================================
# Security Configuration
# ================================
BCRYPT_ROUNDS=12
CORS_ORIGINS="http://localhost:3000"
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Helmet Security Headers
HELMET_CSP=true
HELMET_HSTS=true
HELMET_NO_SNIFF=true
HELMET_FRAMEGUARD=true

# ================================
# Server Configuration
# ================================
NODE_ENV="development"
PORT=3000
HOST="0.0.0.0"
API_PREFIX="api/v1"
SWAGGER_ENABLED=true
SWAGGER_PATH="api"
LOG_LEVEL="info"
TZ="UTC"

# ================================
# Redis Configuration
# ================================
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_TTL=3600
REDIS_MAX_RETRIES=3

# ================================
# üìÅ Storage Configuration
# ================================
STORAGE_PROVIDER="local"
STORAGE_LOCAL_PATH="./uploads"
STORAGE_MAX_FILE_SIZE=10485760

# AWS S3 Configuration (if using S3)
AWS_S3_REGION="us-east-1"
AWS_S3_BUCKET=""
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""

# Google Cloud Storage (if using GCS)
GCS_PROJECT_ID=""
GCS_KEY_FILENAME=""
GCS_BUCKET=""

# ================================
# üìß Email Configuration
# ================================
EMAIL_PROVIDER="smtp"
EMAIL_FROM_NAME="HR System"
EMAIL_FROM_ADDRESS="noreply@hr-system.com"

# SMTP Configuration
SMTP_HOST="localhost"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=""
SMTP_PASSWORD=""

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=""

# AWS SES Configuration (if using SES)
AWS_SES_REGION="us-east-1"
AWS_SES_ACCESS_KEY_ID=""
AWS_SES_SECRET_ACCESS_KEY=""

# ================================
# Monitoring & Observability
# ================================
MONITORING_ENABLED=true

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PATH="/metrics"

# Sentry Error Tracking
SENTRY_ENABLED=false
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH="/health"
HEALTH_CHECK_TIMEOUT=5000

# ================================
# Company Default Settings
# ================================
DEFAULT_COMPANY_NAME="Your Company"
DEFAULT_COMPANY_TIMEZONE="UTC"
DEFAULT_COMPANY_CURRENCY="USD"
DEFAULT_COMPANY_SIZE="MEDIUM"

# ================================
# üìà Performance Management
# ================================
PERFORMANCE_REVIEW_CYCLE_TYPE="ANNUAL"
PERFORMANCE_GOAL_WEIGHT=0.60
PERFORMANCE_COMPETENCY_WEIGHT=0.40
PERFORMANCE_RATING_SCALE_MIN=1
PERFORMANCE_RATING_SCALE_MAX=5

# ================================
# üí∞ Compensation Settings
# ================================
DEFAULT_SALARY_CURRENCY="USD"
DEFAULT_SALARY_FREQUENCY="ANNUALLY"
EXPENSE_MAX_AMOUNT=10000
EXPENSE_DEFAULT_CURRENCY="USD"

# ================================
# ‚è∞ Time & Attendance
# ================================
DEFAULT_WORK_HOURS_PER_WEEK=40
DEFAULT_LEAVE_CARRYOVER=false
DEFAULT_LEAVE_MAX_DAYS=25
TIME_RECORD_AUTO_APPROVE=false

# ================================
# Training & Development
# ================================
TRAINING_DEFAULT_DURATION=8
TRAINING_AUTO_ASSIGN=false
CERTIFICATION_REMINDER_DAYS=30

# ================================
# Feature Flags
# ================================
FEATURE_PERFORMANCE_ANALYTICS=true
FEATURE_360_FEEDBACK=true
FEATURE_GOAL_OKR=true
FEATURE_COMPETENCY_FRAMEWORK=true
FEATURE_CAREER_DEVELOPMENT=true
FEATURE_EXPENSE_MANAGEMENT=true
FEATURE_TIME_TRACKING=true
FEATURE_DOCUMENT_MANAGEMENT=true
FEATURE_POLICY_MANAGEMENT=true
FEATURE_ANNOUNCEMENT_SYSTEM=true

# ================================
# üß™ Development & Testing
# ================================
SEED_DATABASE=false
SEED_ADMIN_EMAIL="admin@hr-system.com"
SEED_ADMIN_PASSWORD="admin123"
DEMO_MODE=false

# API Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_PER_SECOND=10
API_RATE_LIMIT_PER_10_SECOND=100
API_RATE_LIMIT_PER_MINUTE=500

# Session Management
SESSION_TIMEOUT_MINUTES=30
SESSION_CLEANUP_INTERVAL_MINUTES=60
MAX_CONCURRENT_SESSIONS=5

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="pdf,doc,docx,jpg,jpeg,png,gif"
AVATAR_MAX_SIZE_MB=2

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true
PASSWORD_HISTORY_COUNT=5

# ================================
# Build & Deployment
# ================================
BUILD_VERSION="1.0.0"
BUILD_TIMESTAMP=""
GIT_COMMIT_HASH=""
DEPLOYMENT_ENVIRONMENT="development"

# ================================
# üîç Logging Configuration
# ================================
LOG_FORMAT="json"
LOG_LEVEL="info"
LOG_MAX_FILES=10
LOG_MAX_SIZE="10m"
LOG_DATE_PATTERN="YYYY-MM-DD"

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_SENSITIVE_DATA=false

# ================================
# üö® Security Settings
# ================================
SECURITY_HEADERS_ENABLED=true
XSS_PROTECTION=true
CONTENT_TYPE_NOSNIFF=true
FRAME_OPTIONS="DENY"
HSTS_MAX_AGE=31536000
CSP_DEFAULT_SRC="'self'"

# IP Whitelist (comma-separated)
IP_WHITELIST=""

# Failed Login Protection
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION_MINUTES=30
LOGIN_ATTEMPT_WINDOW_MINUTES=15

# ================================
# üì± Notification Settings
# ================================
NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS=true
SMS_NOTIFICATIONS=false
PUSH_NOTIFICATIONS=false

# Notification Providers
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_FROM_NUMBER=""

FIREBASE_PROJECT_ID=""
FIREBASE_PRIVATE_KEY=""
FIREBASE_CLIENT_EMAIL=""

# ================================
# üåê Internationalization
# ================================
DEFAULT_LANGUAGE="en"
SUPPORTED_LANGUAGES="en,es,fr,de,pt,zh"
DEFAULT_DATE_FORMAT="YYYY-MM-DD"
DEFAULT_TIME_FORMAT="HH:mm:ss"

# ================================
# Analytics & Reporting
# ================================
ANALYTICS_ENABLED=true
REPORT_GENERATION_TIMEOUT=300000
EXPORT_MAX_RECORDS=10000
CHART_CACHE_TTL=3600

# Google Analytics (optional)
GA_TRACKING_ID=""
GA_MEASUREMENT_ID=""

# ================================
# üîÑ Background Jobs
# ================================
JOB_QUEUE_ENABLED=true
JOB_QUEUE_REDIS_URL="redis://localhost:6379"
JOB_CONCURRENCY=5
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000

# Scheduled Job Settings
CLEANUP_JOB_ENABLED=true
CLEANUP_JOB_SCHEDULE="0 2 * * *"
REMINDER_JOB_ENABLED=true
REMINDER_JOB_SCHEDULE="0 9 * * *"

# ================================
# üß™ Testing Configuration
# ================================
TEST_DATABASE_URL="postgresql://test:test@localhost:5432/hr_system_test"
TEST_JWT_SECRET="test-jwt-secret-for-testing-only"
TEST_REDIS_URL="redis://localhost:6379/1"
TEST_SKIP_MIGRATIONS=false
TEST_SEED_DATA=true

# ================================
# üê≥ Docker Configuration
# ================================
DOCKER_POSTGRES_DB="hr_system"
DOCKER_POSTGRES_USER="hr_admin"
DOCKER_POSTGRES_PASSWORD="hr_password_secure"
DOCKER_REDIS_PASSWORD="redis_password_secure"

# Container Health Check
HEALTHCHECK_INTERVAL=30
HEALTHCHECK_TIMEOUT=10
HEALTHCHECK_RETRIES=3

